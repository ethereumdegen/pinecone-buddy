# OpenAI API credentials
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Choose the embedding model (defaults to text-embedding-ada-002)
# text-embedding-ada-002 produces 1536 dimensions
# text-embedding-3-small produces 1536 dimensions
# text-embedding-3-large produces 3072 dimensions
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# Optional: Choose the chat model to use for queries (defaults to gpt-4o)
# Other options include: gpt-4-turbo, gpt-3.5-turbo, etc.
OPENAI_CHAT_MODEL=gpt-4o

# Pinecone credentials
PINECONE_API_KEY=your_pinecone_api_key_here
 
PINECONE_HOST=https://your-index-name-project-id.svc.your-region.pinecone.io
# Set this to match your Pinecone index dimension (e.g., 1024, 1536, etc.)
PINECONE_DIMENSION=1536